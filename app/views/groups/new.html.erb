<div>
  <%= link_to "Back to groups", groups_path %>
</div>

<h1>New Group</h1>



<div class="groups new">
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>
      <ul>
        <% @group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@group) do |f| %>
    <% # url: groups_path, method: 'post' %>
    <table summary="Group form fields">
      <tr>
        <th><%= f.label :name %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :org_type %></th>
        <td>
          <%= f.select :org_type, ['Volunteer Group', 'Nonprofit', 'Company', 'College/University', 'Other'], prompt: 'Select organization type' %>
        </td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Group") %>
    </div>
  <% end %>
</div>
