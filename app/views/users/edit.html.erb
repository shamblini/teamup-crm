<!-- app/views/users/edit.html.erb -->
<h1>Edit User</h1>

<%= form_for(@user) do |f| %>
    <table summary="Group form fields">
        <tr>
            <th><%= f.label :name %></th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th><%= f.label :email %></th>
            <td><%= f.text_field :email %></td>
        </tr>
        <tr>
            <th><%= f.label :user_type %></th>
            <td><%= f.select :user_type, ['Admin', 'Staff', 'Volunteer/Donor', 'Other'], prompt: 'Select User Type' %></td>
        </tr>
        <tr>
            <th><%= f.label :permission_set %></th>
            <td><%= f.number_field :permission_set %></td>
        </tr>
        <tr>
            <th><%= f.label :group_id %></th>
            <td> <%= f.collection_select(:group_id, Group.all, :id, :name, prompt: "Select a group") %></td>
        </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Update Group") %>
    </div>
<% end %>
